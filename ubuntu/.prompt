#Prompt

parse_git_branch() {
  	local AUX=$(git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/\1/')
  	if [ "$AUX" != "" ]; then 
  		echo "($AUX)" 
	fi
}

